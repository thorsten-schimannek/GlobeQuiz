<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shnoop.globequiz.MainActivity">

    <LinearLayout
        android:id="@+id/fragmentContainerLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/globeHolderFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#00000000"
            android:padding="50dp"
            android:src="@drawable/button_background" />

        <LinearLayout
            android:id="@+id/linearLayoutQuestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignWithParentIfMissing="false"
        android:background="@drawable/fragment_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewFlag"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/fragment_background" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="4" />

        <ImageButton
            android:id="@+id/imageButtonWiki"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:contentDescription="@string/wiki_button_description"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wiki" />

    </LinearLayout>
</RelativeLayout>
